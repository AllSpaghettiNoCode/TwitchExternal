{
    "manifest_version": 2,
    "name": "TwitchExternalHook",
    "version": "1.6",
    "description": "Adds download functionality to the extension. Must also have 'server.py'.",
    "permissions": ["activeTab", "storage", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["content.js"]
        }
    ]
}
